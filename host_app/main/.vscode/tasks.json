{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/auswahlmenu.c",
                "${workspaceFolder}/src/configserial.c",
                "${workspaceFolder}/src/filechooser.c",
                "${workspaceFolder}/src/bootloader.c",
                "${workspaceFolder}/src/statusbar.c",
                "${workspaceFolder}/src/../../compiler/Compiler.c",
                "${workspaceFolder}/src/../../uart/src/uart.c",
                "${workspaceFolder}/src/debugger.c",

                "-o",
                "${workspaceFolder}/bin/bootloader",
                "-I${workspaceFolder}/includes",
                "-lncurses",
                "-L/usr/lib/"
              ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}