{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main/src/main.c",
                "${workspaceFolder}/main/src/auswahlmenu.c",
                "${workspaceFolder}/main/src/configserial.c",
                "${workspaceFolder}/main/src/filechooser.c",
                "${workspaceFolder}/main/src/bootloader.c",
                "${workspaceFolder}/main/src/statusbar.c",
                "${workspaceFolder}/main/src/config.c",
                "${workspaceFolder}/compiler/Compiler.c",
                "${workspaceFolder}/uart/src/uart.c",
                "${workspaceFolder}/main/src/debugger.c",
                "${workspaceFolder}/main/src/breakpointmanager.c",
                "${workspaceFolder}/texteditor/Datei.c",
                "${workspaceFolder}/texteditor/editLine.c",
                "${workspaceFolder}/texteditor/prompt.c",

                "-o",
                "${workspaceFolder}/main/bin/bootloader",
                "-I${workspaceFolder}/main/includes",
                "-I${workspaceFolder}/texteditor",
                "-I${workspaceFolder}/compiler",
                "-lncurses",
                "-L/usr/lib/"
              ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}